<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Zoo.App"
             xmlns:local="using:Zoo"
             xmlns:views="using:Zoo.Views"
             xmlns:vm="using:Zoo.ViewModels"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <DataTemplate DataType="vm:PetsViewModel">
            <views:PetsView/>
        </DataTemplate>
        <DataTemplate DataType="vm:DietsViewModel">
            <views:DietsView/>
        </DataTemplate>
        <DataTemplate DataType="vm:EmployeesViewModel">
            <views:EmployeesView/>
        </DataTemplate>
        <DataTemplate DataType="vm:AddAnimalViewModel">
            <views:AddAnimalView/>
        </DataTemplate>
        <DataTemplate DataType="vm:AddDietViewModel">
            <views:AddDietView/>
        </DataTemplate>
        <DataTemplate DataType="vm:AddEmployeeViewModel">
            <views:AddEmployeeView/>
        </DataTemplate>
        <DataTemplate DataType="vm:DietTypesViewModel">
            <views:DietTypesView/>
        </DataTemplate>
        <DataTemplate DataType="vm:AddDietTypeViewModel">
            <views:AddDietTypeView/>
        </DataTemplate>
        
        <DataTemplate DataType="vm:UpdateDietTypeViewModel">
            <views:UpdateDietTypeView/>
        </DataTemplate>
    </Application.DataTemplates>
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml"/>
    </Application.Styles>
</Application>