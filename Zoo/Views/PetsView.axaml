<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Zoo.Views.PetsView"
             xmlns:vm="using:Zoo.ViewModels"
             xmlns:models1="clr-namespace:DatabaseUtils.Models;assembly=DatabaseUtils"
             x:DataType="vm:PetsViewModel">
    <ScrollViewer>
        <DataGrid x:Name="Pets" AutoGenerateColumns="False" ItemsSource="{Binding Animals}" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True"/>
                
                <DataGridTemplateColumn Header="Тип" IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate DataType="models1:Animal">
                            <TextBlock Text="{Binding TypeId}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                
                <DataGridTextColumn Header="Имя" Binding="{Binding Name}" IsReadOnly="True"/>
                
                <DataGridTemplateColumn Header="Дата рождения" IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate DataType="models1:Animal">
                            <TextBlock Text="{Binding BirthDate, StringFormat='{}{0:dd.MM.yyyy}'}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                
                <DataGridTextColumn Header="Пол" Binding="{Binding Sex}" IsReadOnly="True"/>
                
                <DataGridTemplateColumn Header="Редактировать" IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate DataType="models1:Animal">
                            <Button HorizontalAlignment="Center" Margin="8 4 8 4">
                                <Svg Width="16" Path="../Assets/edit.svg"/>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                
                <DataGridTemplateColumn Header="Удалить" IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate DataType="models1:Animal">
                            <Button Command="{Binding #Pets.((vm:PetsViewModel)DataContext).DeleteAnimalCommand}" CommandParameter="{Binding Id}" HorizontalAlignment="Center" Margin="8 4 8 4">
                                <Svg Width="16" Path="../Assets/bin.svg"/>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </ScrollViewer>
</UserControl>